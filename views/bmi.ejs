<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>BMI Calculator</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <nav>
        <a href="/home">Home</a> |
        <a href="/bmi">BMI</a> |
        <a href="/weather">Weather</a> |
        <a href="/nodemailer">Email</a> |
        <a href="/blogs">Blogs</a> |
        <a href="/qrcode">QR Code</a> |
        <a href="/admin">Admin</a> |
        <a href="/logout">Logout</a>
    </nav>
    <div class="container">
        <h1>BMI Calculator</h1>
        <form action="/bmi/calculate" method="post">
            <input type="number" step="1" name="weight" placeholder="Weight (kg)" required />
            <input type="number" step="0.01" name="height" placeholder="Height (m)" required />
            <button type="submit">Calculate BMI</button>
        </form>
        <% if (result) { %>
            <% let color = ''; %>
            <% if (result.includes('Normal weight')) { %>
                <% color = 'green'; %>
            <% } else if (result.includes('Underweight')) { %>
                <% color = '#e74c3c'; %> 
            <% } else if (result.includes('Overweight')) { %>
                <% color = '#f1c40f'; %> 
            <% } else if (result.includes('Obese')) { %>
                <% color = '#d32f2f'; %> 
            <% } %>
            <p style="color: <%= color %>; font-weight: 600;"><%= result %></p>
        <% } %>
    </div>
</body>
</html>